{
  "name": "server",
  "packageManager": "yarn@4.4.1",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "watch": "tsc -w",
    "prestart": "yarn build",
    "start": "concurrently --kill-others \"yarn watch\" \"nodemon .\""
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "nodemon": "^3.1.7",
    "tslint": "^6.1.3",
    "typescript": "^5.6.2"
  }
}
